{{#js}}
require(['jquery'], function($){
    $(".fa-arrow-left").click(function () {
        $(".sidebar").addClass("close-bars");
        $(".compact-logo").show();
        $(".qicon-menu").show();
    });
    $(".qicon-menu").click(function () {
        $(".sidebar").removeClass("close-bars");
        $(".compact-logo").hide();
        $(".qicon-menu").hide();
    });
    $(".arrow").click(function () {
        $(".nav-item").toggleClass("showMenu");
    });
});
{{/js}}